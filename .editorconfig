# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[*.{yml, yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
